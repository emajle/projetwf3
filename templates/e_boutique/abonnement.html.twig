{% extends "/base.html.twig" %}
{% block title %}Abonnement{% endblock %}

{% block head %}
{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>
{% endblock %}

    {% block body %}

<div class="container py-3">

  <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
      <h1 class="display-4 fw-normal">Nos abonnements</h1>
      <p class="fs-5 text-muted">Nos abonnements ont été pensés pour vous et vos compagnons, ils vous permettront d'avoir un ou des e-carnet(s) de santé, des conseils personnalisés venant de professionnels du monde animal, ou bien les deux! </p>
    </div>

    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm border-primary">
          <div class="card-header py-3 text-white bg-primary border-primary">
            <h4 class="my-0 fw-normal">Basic</h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title">20€<small class="text-muted fw-light">/mois</small></h1>
            <ul class="list-unstyled mt-3 mb-4">
              <li>De 1 à 3 animaux</li>
              <li>E-coaching</li>
              <li>Suivi vaccin/hospitalisation</li>
              <li>Coordonnées vétérinaires</li>
            </ul>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
              <a href="{{ path('panier_ajout', {'id': 1}) }}"><button type="button" class="btn btn-lg btn-block btn-primary">Je m'abonne !</button></a> 
            {% else %}
              <a href="{{ path('app_login') }}"><button type="button" class="btn btn-lg btn-block btn-primary">Je m'abonne !</button></a>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm border-primary">
          <div class="card-header py-3 text-white bg-primary border-primary">
            <h4 class="my-0 fw-normal">Premium</h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title">50€<small class="text-muted fw-light">/mois</small></h1>
            <ul class="list-unstyled mt-3 mb-4">
              <li>De 4 à 6 animaux</li>
              <li>E-coaching</li>
              <li>Suivi vaccin/hospitalisation</li>
              <li>Coordonnées vétérinaires</li>
            </ul>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
              <a href="{{ path('panier_ajout', {'id': 2}) }}"><button type="button" class="btn btn-lg btn-block btn-primary">Je m'abonne !</button></a> 
            {% else %}
              <a href="{{ path('app_login') }}"><button type="button" class="btn btn-lg btn-block btn-primary">Je m'abonne !</button></a>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm border-primary">
          <div class="card-header py-3 text-white bg-primary border-primary">
            <h4 class="my-0 fw-normal">Confort</h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title">90€<small class="text-muted fw-light">/mois</small></h1>
            <ul class="list-unstyled mt-3 mb-4">
              <li>Plus de 6 animaux</li>
              <li>E-coaching</li>
              <li>Suivi vaccin/hospitalisation</li>
              <li>Coordonnées vétérinaires</li>
            </ul>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
              <a href="{{ path('panier_ajout', {'id': 3}) }}"><button type="button" class="btn btn-lg btn-block btn-primary">Je m'abonne !</button></a> 
            {% else %}
              <a href="{{ path('app_login') }}"><button type="button" class="btn btn-lg btn-block btn-primary">Je m'abonne !</button></a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
 </div>

{% endblock %}
