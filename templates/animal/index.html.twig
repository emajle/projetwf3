{% extends 'base.html.twig' %}

{% block title %}Animal index
{% endblock %}

{% block body %}
{%  if is_granted("ROLE_ADMIN") %}
	<h1>Animaux
	</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Prenom</th>
				<th>Espece</th>
				<th>Couleur</th>
				<th>Age</th>
				<th>Sexe</th>
				<th>Photo</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for animal in animals %}
				<tr>
					<td>{{ animal.id }}</td>
					<td>{{ animal.prenom }}</td>
					{% if animal.espece == "chien" %}
						<td>
							<i class="fas fa-dog"></i>
						</td>
					{% else %}
						<td>
							<i class="fas fa-cat"></i>
						</td>
					{% endif %}
					<td>{{ animal.couleur }}</td>
					<td>{{ animal.age }}</td>
					{% if animal.sexe == "m" %}
						<td>
							<i class="fas fa-mars"></i>
						</td>
					{% else %}
						<td>
							<i class="fas fa-venus"></i>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="9">Aucun animaux d'enrengistrée</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		
	{% elseif is_granted("ROLE_ABONNE") %}
			<h1 class="text-center mb-5">Mes Animaux</h1>
		{% if app.user.animals  is not empty  %}
					<div class="row justify-content-between shadow p-3 mb-5 bg-body mb-5">
						{% for animal in app.user.animals %}
							<div id="card-index" class=" mb-5 border-dark card" style="width: 18rem;">
								<div class="card-body text-center couleur-card">
									<h5 class="card-title">{{animal.prenom}}</h5>
									<p class="card-text fst-italic">{{animal.description}}</p>
								</div>
								<ul class="text-center list-group list-group-flush">
									<li class="list-group-item">
										{% if animal.espece == "chien" %}
												<i class="fas fa-dog"></i>
										{% else %}
												<i class="fas fa-cat"></i>
										{% endif %}
									</li>
									<li class="list-group-item">{{animal.age}} ans</li>
									<li class="list-group-item">
										{% if animal.sexe == "m" %}
											<i class="fas fa-mars"></i>
										{% else %}
											<i class="fas fa-venus"></i>
										{% endif %}
									
									
									
									</li>
									<li class="list-group-item">{{animal.couleur}}</li>
								</ul>
								<div class="card-body text-center couleur-card">
									<a href="{{ path('animal_show', {'id': animal.id}) }}">Voir CI</i></a>
									<a href="{{ path('animal_edit', {'id': animal.id}) }}" class="card-link">Modifiée</a>
								</div>
							</div>
						{% endfor %}
					</div>
	
					<button type="button" class="btn btn-success">
						<a href="{{ path('animal_new') }}">Ajouter un animal</a>
					</button>
						
					{% endif %}
					<td>
						{% for image in animal.images %}
							<img src="{{ asset('/uploads/animal_photo/'~ image.name) }}" alt="photo de notre bete" width="10">
						{% endfor %}
					</td>


					<td>{{ animal.description }}</td>
					<td>
						<a href="{{ path('animal_show', {'id': animal.id}) }}">
							<i class="far fa-eye"></i>
						</a>
						<a href="{{ path('animal_edit', {'id': animal.id}) }}">
							<i class="far fa-edit"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">Aucun animaux d'enrengistrée</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{% endif %}
{% endif %}

{% endblock %}
