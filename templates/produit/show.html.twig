{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Référence</th>
                <td>{{ produit.reference }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ produit.titre }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ produit.categories.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ produit.photo }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Origine_site</th>
                <td>{{ produit.origineSite }}</td>
            </tr>
        </tbody>
    </table>
    <div class="mb-2">
        <a class="btn btn-primary" href="{{ path('produit_edit', {'id': produit.id}) }}">Modifier</a>

        <a class="btn btn-secondary" href="{{ path('produit_index') }}">Revenir à la liste</a>
    </div>
    

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
