{% extends 'base.html.twig' %}

{% block title %}Produits
{% endblock %}

{% block body %}
	<h1>Les produits :</h1>
<br>
	<table class="table table-striped table-primary table-responsive">
		<thead class="table-dark">
			<tr>
				<th>Référence</th>
				<th>Titre</th>
				<th>Catégorie</th>
				<th>Description</th>
				<th>Photo</th>
				<th>Prix</th>
				<th>Origine_site</th>
				<th>Voir</th>
				<th>Editer</th>
			</tr>
		</thead>
		<tbody>
			{% for produit in produits %}
				<tr>
					<td class="fw-bold">{{ produit.reference }}</td>
					<td class="fw-bold">{{ produit.titre }}</td>
					<td>{{ produit.categories.name }}</td>
					<td>{{ produit.description }}</td>
					<td>{{ produit.photo }}</td>
					<td>{{ produit.prix }}</td>
					<td>{{ produit.origineSite }}</td>
					<td>
						<a href="{{ path('produit_show', {'id': produit.id}) }}"><i class="far fa-eye"></i></a>
					</td>
					<td>
						<a href="{{ path('produit_edit', {'id': produit.id}) }}"><i class="far fa-edit"></i></a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">Aucun produit enregistré</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
 	
		<a class="btn btn-primary" href="{{ path('produit_new') }}">Nouveau produit</a>

{% endblock %}
