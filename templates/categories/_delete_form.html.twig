<form method="post" action="{{ path('categories_delete', {'id': category.id}) }}" onsubmit="return confirm('Êtes vous sûres de vouloir supprimer cette categorie?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
