								<!--Grid column-->

<!-- Copyright -->
		<div class="text-center p-3 text-muted bg-warning">
			&copy;{{ "now"|date("Y") }}
			<a class="text-muted" href="#">MyPetCare.com</a>
		</div>
<!-- end Copyright -->
	</footer>
{% endblock %}
</html>
