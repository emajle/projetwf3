<!DOCTYPE html>
<html class="no-js" lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Welcome!{% endblock %}
		</title>

		{# --- CSS #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			{# custom for conseils template #}
			<link href="features.css" rel="stylesheet">
		{% endblock %}
		{% block headHome %}{% endblock %}
		{% block head %}{% endblock %}
        <style>
            .grid{
                display:grid;
                grid-template-columns: repeat(3, 1fr);
                grid-gap: 20px;
            }
        </style>
        
        
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}

	</head>
	<body>
{% block h1 %}{% endblock %}
		<div class="container">
			{% block body %}
				{% for message in app.flashes("success") %}
					<div class="alert alert-success" role="alert">{{ message }}</div>
				{% endfor %}
			{% endblock %}

		</div>
      {% block nav %}
	  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
					<div class="container-fluid">
						{% if app.user %}
							<a class="navbar-brand" href="{{path('app_logout')}}">DÃ©connexion</a>
						{% else %}
							<a class="navbar-brand" href="{{path('app_login')}}">Connexion</a>
						{% endif %}
						<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>
						<div class="collapse navbar-collapse" id="navbarCollapse">
							<ul class="navbar-nav me-auto mb-2 mb-md-0">
								<li class="nav-item">
									<a class="nav-link" href="{{ path('conseil_index') }}">
										Les bons conseils
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{path('specialiste_index')}}">Annuaire</a>
								</li>
								
								<li class="nav-item dropdown">
									<a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
										E-Boutique
									</a>
									<ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
										<li>
											<a class="dropdown-item" href="{{ path('e_boutique_accessoires') }}">Accessoires</a>
										</li>
										<li>
											<a class="dropdown-item" href="{{ path('e_boutique_abonnement') }}">Abonnement</a>
										</li>
									</ul>
								</li>
								{%  if is_granted("ROLE_ADMIN") %} 
								<li class="nav-item dropdown">
									<a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
										Espace admin
									</a>
									<ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
										<li>
											<a class="dropdown-item" href="{{ path('animal_index') }}">Animaux</a>
										</li>
										<li>
											<a class="dropdown-item" href="{{ path('user_index') }}">Membre</a>
										</li>
										<li>
											<a class="dropdown-item" href="{{ path('carnet_sante_index') }}">E-carnet</a>
										</li>
										<li>
											<a class="dropdown-item" href="{{ path('abonnement_index') }}">Abonnements</a>
										</li>
										<li>
											<a class="dropdown-item" href="{{ path('produit_index') }}">Produits</a>
										</li>
									</ul>
								</li>
								{% elseif  is_granted("ROLE_ABONNE") %}  
								<li class="nav-item dropdown">
									<a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
										Mon espace 
									</a>
									<ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
										<li>
											<a class="dropdown-item" href="{{ path('animal_index') }}">Animaux</a>
										</li>
										<li>
											<a class="dropdown-item" href="{{ path('carnet_sante_index') }}">E-carnet</a>
										</li>
									</ul>
								</li>
								{% endif %}
								 {% if app.user %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('profil')}}">
										<i class="fas fa-user"></i>
									</a>
								</li>
								{%  endif %}
							</ul>
							<form class="d-flex">
								<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
								<button class="btn btn-outline-success" type="submit">Search</button>
							</form>
						</div>
					</div>
				</nav>
	  {% endblock %}
        
        <style>
            .grid{
                display:grid;
                grid-template-columns: repeat(3, 1fr);
                grid-gap: 20px;
            }
        </style>
        {% block javascriptsAjax %}{% endblock %}
        
    </head>
