{% extends 'base.html.twig' %}

{% block title %}Visite vétérinaire{% endblock %}

{% block body %}
    <h1>Vos visites vétérinaires : </h1>

    <div class="table-responsive ">
        <table class="table table-striped table-primary table-responsive">
            <thead class="table-dark">
                <tr>
                    <th>Date_visite</th>
                    <th>Symptome</th>
                    <th>Diagnostique</th>
                    <th>Analyses</th>
                    <th>Voir</th>
                    <th>Editer</th>
                </tr>
            </thead>
            <tbody>
            {% for visite_medical in visite_medicals %}
                <tr>
                    <td class="fw-bold">{{ visite_medical.dateVisite ? visite_medical.dateVisite|date('Y-m-d') : '' }}</td>
                    <td>{{ visite_medical.symptome }}</td>
                    <td>{{ visite_medical.diagnostique }}</td>
                    <td>{{ visite_medical.analyses }}</td>
                    <td>
                        <a href="{{ path('visite_medical_show', {'id': visite_medical.id}) }}"><i class="far fa-eye"></i></a>
                    </td>
                    <td>
                        <a href="{{ path('visite_medical_edit', {'id': visite_medical.id}) }}"><i class="far fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucune visite vétérinaire</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
