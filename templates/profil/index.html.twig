{% extends 'base.html.twig' %}

{% block title %}Profil {{app.user.pseudo}}{% endblock %}

{% block body %}
      <h2 class="text-center">Hello {{ app.user.pseudo |capitalize }}! </h2>


          <div class="row gutters-sm mt-3">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <div class="mt-3">
                      <h4>{{app.user.pseudo |upper }}</h4>
                      {% if (app.user.abonnement) is not null %} 
                        <a href="{{ path('remove_abonnement', {'idU': app.user.id }) }}" >
                        <button class="btn btn-danger">Se d√©sabonner</button></a>

                        {% else %}
                        <a href="{{ path('e_boutique_abonnement') }}" >
                        <button class="btn btn-danger">S'Abonner</button></a>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
              <div class="card mt-3">
                <h5 class="text-center pt-3 pb-3">Mes E-Carnet</h5>
                <ul class="list-group list-group-flush">
                  {% for animal in app.user.animals  %}
                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                   <h6>{{animal.prenom |upper }}
                    {% if animal.espece == "chien" %}
                      üêï
                    {% else %}
                      üêà
                    {% endif %}
                   </h6>
                    <span class="text-secondary"> <a href="{{ path('carnet_sante_show', {'id': animal.carnetSante.id }) }}"> Carnet {{ animal.carnetSante.id}} </a></span>
                    </li>
                  {% endfor %}
                </ul>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Nom</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{app.user.nom |capitalize}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Prenon</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{app.user.prenom |capitalize}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{app.user.email}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Adresse</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{app.user.adresse}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Ville</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{app.user.ville}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Code Postal</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{app.user.cp}}
                    </div>
                  </div>
                  <hr>
                  {% if app.user.abonnement is not null %}
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Abonnement</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{app.user.abonnement.name |capitalize}}
                    </div>
                  </div>
                  <hr>
                  {% endif %}
                  <div class="row">
                    <div class="col-sm-12">
                      <a class="btn btn-info" href="{{ path('user_edit', {'id': app.user.id}) }}">Edit</a>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row gutters-sm">
                      {% for animal in app.user.animals  %}
                <div class="mb-3">
                            {% include "animal/card_animal.html.twig" %} 
                            </div>
                      {% endfor %}
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
{% endblock %}
