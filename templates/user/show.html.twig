{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur {{user.pseudo}}</h1>

   <div class = "container">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Pseudo</th>
                    <td>{{user.pseudo}}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{user.Prenom}}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{user.nom}}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{user.adresse}}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{user.ville}}</td>
                </tr>
                <tr>
                    <th>Code Postal</th>
                    <td>{{user.cp}}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>
                        {% set textrole = "" %}
                                {% for role in user.roles %}
                                    {% if role == "ROLE_ADMIN" %}
                                                
                                            {% set textrole = textrole ~ (textrole ? ", " : "") ~ "Administrateur" %}
            
                                        {% elseif role == "ROLE_ABONNE" %}
            
                                        {% set textrole = textrole ~ (textrole ? ", " : "") ~ "Abonn√©" %}
            
                                        {% elseif role == "ROLE_USER" %}
            
                                        {% set textrole = textrole ~ (textrole ? ", " : "") ~ "Utilisateur" %}
                                    {% endif %}
                                {% endfor %}
                                {{textrole}}
                    </td>
                </tr>
            </tbody>
        </table>

        <h2>Animaux</h2>
        <div>
            <p>Le menbre {{user.pseudo}} a {{animaux|length}} </p>
        </div>
        <div class="d-flex justify-content-center">
            {% for animal in animaux %}
                <table class="table border border-dark">
                        <tbody>
                            <tr>
                                <th>Prenom</th>
                                <td>{{animal.prenom}}</td>
                            </tr>
                            <tr>
                                <th>Espece</th>
                                <td>{{animal.espece}}</td>
                            </tr>
                            <tr>
                           <th></th>
                            <td> <a href="{{ path('animal_show', {'id': animal.id}) }}">Voir animal</a></td>
                            </tr>
                        </tbody>
                </table>
            {% endfor %}
        </div>
        
    
        <a href="{{ path('user_index') }}">Retour a la liste</a><br>
    
        <a href="{{ path('user_edit', {'id': user.id}) }}">Edite le membre</a>
    
       
        {{ include('user/_delete_form.html.twig') }}
   </div>
{% endblock %}
