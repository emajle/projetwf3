{% extends 'base.html.twig' %}

{% block title %}Abonnement index{% endblock %}

{% block body %}
    <h1>Les abonnements : </h1>
<br>
    <table class="table table-striped table-primary">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Prix</th>
                <th>Voir</th>
                <th>Editer</th>
            </tr>
        </thead>
        <tbody>
        {% for abonnement in abonnements %}
            <tr>
                <td class="fw-bold">{{ abonnement.name|capitalize }}</td>
                <td>{{ abonnement.prix }}€</td>
                <td>
                    <a href="{{ path('abonnement_show', {'id': abonnement.id}) }}"><i class="far fa-eye"></i></a>
                </td>
                <td>
                    <a href="{{ path('abonnement_edit', {'id': abonnement.id}) }}"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune abonnement enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-outline-primary">
				<a href="{{ path('abonnement_new') }}">Nouvel abonnement</a>
	</button>

{% endblock %}
